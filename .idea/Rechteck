public class Rechteck extends Figure {

    private double laenge = 0;
    private double breite = 0;
    private double linksPunkt = 0;
    private double rechtsPunkt = 0;

    public Rechteck(double laenge, double breite) {
        this.laenge = laenge;
        this.breite = breite;
    }

    public double getLaenge() {
        return laenge;
    }

    public void setLaenge(double laenge) {
        this.laenge = laenge;
    }

    public double getBreite() {
        return breite;
    }

    public void setBreite(double breite) {
        this.breite = breite;
    }

    public double getLinksPunkt() {
        return linksPunkt;
    }

    public void setLinksPunkt(double linksPunkt) {
        this.linksPunkt = linksPunkt;
    }

    public double getRechtsPunkt() {
        return rechtsPunkt;
    }

    public void setRechtsPunkt(double rechtsPunkt) {
        this.rechtsPunkt = rechtsPunkt;
    }

    @Override
    public double flaeche() {
        double flaeche = 0;
        flaeche = laenge * breite;
        return flaeche;
    }

    @Override
    public double umfang() {
        double umfang = 0;
        umfang = (2 * laenge) + (2 * breite);
        return umfang;
    }

    @Override
    public String toString() {
        return null;
    }
}